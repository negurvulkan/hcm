{
    "id": "certificate",
    "name": "Urkundenlayout",
    "description": "Einseitiges A4-Dokument mit Titel, Namen und Ergebniszeile.",
    "canvas": {
        "width": 1024,
        "height": 724,
        "background": "#ffffff"
    },
    "pages": [
        {
            "id": "certificate-page",
            "elements": [
                {
                    "id": "shape-background",
                    "type": "shape",
                    "x": 40,
                    "y": 40,
                    "width": 944,
                    "height": 644,
                    "data": {
                        "variant": "rectangle",
                        "background": "#f5f7ff",
                        "borderColor": "#d0d7ff",
                        "borderWidth": 2,
                        "borderRadius": 24,
                        "fillOpacity": 1
                    }
                },
                {
                    "id": "certificate-title",
                    "type": "text",
                    "x": 120,
                    "y": 100,
                    "width": 784,
                    "height": 120,
                    "data": {
                        "text": "{{ event.title }}",
                        "subline": "{{ event.start_date }} – {{ event.end_date }} · {{ event.location }}",
                        "fontFamily": "'Inter', 'Segoe UI', sans-serif",
                        "fontSize": 48,
                        "color": "#111827",
                        "textAlign": "center",
                        "lineHeight": 1.3
                    }
                },
                {
                    "id": "recipient",
                    "type": "text",
                    "x": 140,
                    "y": 280,
                    "width": 744,
                    "height": 140,
                    "data": {
                        "text": "{{ person.name }}",
                        "subline": "{{ horse.name }} · {{ person.club }}",
                        "fontFamily": "'Inter', 'Segoe UI', sans-serif",
                        "fontSize": 42,
                        "color": "#1f2937",
                        "textAlign": "center",
                        "lineHeight": 1.2
                    }
                },
                {
                    "id": "result",
                    "type": "text",
                    "x": 200,
                    "y": 440,
                    "width": 624,
                    "height": 100,
                    "data": {
                        "text": "Platz {{ start.position }} mit {{ start.score }} Punkten",
                        "subline": "Klasse: {{ event.discipline }} · Startnummer {{ start.number }}",
                        "fontFamily": "'Inter', 'Segoe UI', sans-serif",
                        "fontSize": 28,
                        "color": "#4338ca",
                        "textAlign": "center",
                        "lineHeight": 1.4
                    }
                },
                {
                    "id": "signature",
                    "type": "text",
                    "x": 160,
                    "y": 560,
                    "width": 704,
                    "height": 80,
                    "data": {
                        "text": "{{ event.title }}",
                        "subline": "Turnierleitung · {{ event.end_date }}",
                        "fontFamily": "'Inter', 'Segoe UI', sans-serif",
                        "fontSize": 20,
                        "color": "#6b7280",
                        "textAlign": "center",
                        "lineHeight": 1.2
                    }
                }
            ]
        }
    ]
}
